<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomActivity">

    <ImageView
        android:id="@+id/bottomImageViewB"
        android:layout_width="400dp"
        android:layout_height="225dp"
        android:layout_marginTop="20dp"
        android:contentDescription="Image of a Pant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pant" />

    <Button
        android:id="@+id/clickBottomButtonB"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:contentDescription="Click picture of your bottomwear(pant, skirt, et cetra)"
        android:onClick="chooseBottom"
        android:text="CLICK BOTTOMWEAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomImageViewB"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape" />

    <Button
        android:id="@+id/toTopButtonB"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:contentDescription="Click to go to previous page"
        android:onClick="goToTop"
        android:text="TOPWEAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toResultButtonB"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape" />

    <Button
        android:id="@+id/toResultButtonB"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:contentDescription="Click to go to result page"
        android:onClick="goToResult"
        android:text="RESULT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clickBottomButtonB"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape" />
</android.support.constraint.ConstraintLayout>